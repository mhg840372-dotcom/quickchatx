{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    /* ğŸ” Seguridad TS */
    "strict": true,
    "allowJs": false,
    "noEmit": true,

    /* ğŸ”¥ Imports absolutos "@/" y "app/*" */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "app/*": ["app/*"]
    },

    /* ğŸ§¹ Silencia deprecaciones de TS 6 mientras migramos baseUrl */
    "ignoreDeprecations": "6.0",

    /* âš™ï¸ Mejor Developer Experience */
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* âš›ï¸ React 19 (React Compiler + Expo) */
    "jsx": "react-jsx",

    /* ğŸ§  Metro bundler + Expo */
    "moduleResolution": "bundler",

    /* â­ IMPORTANTE â€” Para permitir .d.ts personalizados como crypto-js */
    "typeRoots": ["./types", "./node_modules/@types"],

    /* âš¡ Para que no se queje TS si faltan algunos tipos externos */
    "skipLibCheck": true
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",

    /* Expo Router */
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app",

    /* ğŸ‘ˆ Muy importante: donde tienes crypto-js.d.ts */
    "types"
  ]
}
